{
  "version": "1.3.2",
  "packages": ["packages/*", "website"],
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public"
    },
    "version": {
      "allowBranch": ["main", "release/*"],
      "conventionalCommits": true,
      "createRelease": "github",
      "signGitCommit": true,
      "signGitTag": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "hidden": false,
            "section": "âœ¨ Features"
          },
          {
            "type": "fix",
            "hidden": false,
            "section": "ğŸ› Bug Fixes"
          },
          {
            "type": "visual",
            "hidden": false,
            "section": "ğŸ’„ Visual design"
          },
          {
            "type": "perf",
            "hidden": false,
            "section": "âš¡ï¸ Performance"
          },
          {
            "type": "docs",
            "hidden": false,
            "section": "ğŸ“ Documentation"
          },
          {
            "type": "chore",
            "hidden": true,
            "section": "ğŸ›  Maintenance"
          },
          {
            "type": "style",
            "hidden": true,
            "section": "ğŸ¨ Code style"
          },
          {
            "type": "refactor",
            "hidden": false,
            "section": "â™»ï¸ Refactor"
          },
          {
            "type": "test",
            "hidden": true,
            "section": "ğŸ§ª Tests"
          }
        ],
        "issuePrefixes": ["#"],
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
        "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
        "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
        "userUrlFormat": "{{host}}/{{user}}"
      }
    }
  }
}
